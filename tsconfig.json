{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true, // json import
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./@types"], // type을 모듈로 지정할 때 에러 피하는 용도
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@Utils/*": ["Utils/*"],
      "@Context/*": ["Context/*"],
      "@Router/*": ["Router/*"],
      "@Hooks/*": ["Hooks/*"],
      "@Screens/*": ["Screens/*"],
      "@Images/*": ["Assets/Images/*"],
      "@Icons/*": ["Assets/Icons/*"],
      "@Fonts/*": ["Assets/Fonts/*"],
      "@Components/*": ["Components/*"],
      "@Store/*": ["Store/*"],
      "@Styles/*": ["Styles/*"],
      "@Interface/*": ["Interface/*"],
      "@Symbols/*": ["Symbols/*"],
      "@Data/*": ["Data/*"]
    }
  },

  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
